// OK

fn ff(f : float) : float {
   return f * 2.0
}

fn grayscale_pixel(x: rgba) : rgba {
   let r_linear = ff(x.r)
   let g_linear = ff(x.g)
   let b_linear = ff(x.b)
   let y_linear = (0.2126 * r_linear )+ (0.7152 * g_linear) + (0.0722 * b_linear)
   let y = ff(y_linear)
   return rgba{y, y, y, 1.0}
}

